<resources>
    <!-- Výchozí téma žluté -->
    <style name="Theme.KellyCode.Yellow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:navigationBarColor">@color/yellow</item>
        <item name="android:windowBackground">@color/yellow</item>
    </style>

    <!-- NoActionBar verze -->
    <style name="Theme.KellyCode.NoActionBar" parent="Theme.KellyCode.Yellow">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Modré téma -->
    <style name="Theme.KellyCode.Blue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:windowBackground">@color/blue</item>
    </style>
</resources>
